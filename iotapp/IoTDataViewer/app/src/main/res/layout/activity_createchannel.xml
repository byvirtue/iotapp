<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.aroras.iotdataviewer.channel.createchannel">

    <include layout="@layout/content_createchannel" />
    <TextView
        android:text="New Channel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="false"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="36sp"
        android:background="@android:color/darker_gray"
        android:textAlignment="center"
        android:shadowColor="@color/colorPrimaryDark" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp"
        >

        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            >



        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="0dp"
            android:id="@+id/layout1"
            android:textAlignment="textEnd"
            android:layout_marginBottom="40dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:text="Name"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:text="Description"
                android:textSize="20dp"
                android:layout_below="@id/name"
                android:layout_marginTop="@dimen/ht"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/field1"
                android:text="Field1"
                android:textSize="20dp"
                android:layout_below="@id/description"
                android:layout_marginTop="@dimen/ht"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/field2"
                android:text="Field2"
                android:textSize="20dp"
                android:layout_below="@id/field1"
                android:layout_marginTop="@dimen/ht"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/field3"
                android:text="Field3"
                android:textSize="20dp"
                android:layout_below="@id/field2"
                android:layout_marginTop="@dimen/ht"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/field4"
                android:text="Field4"
                android:textSize="20dp"
                android:layout_below="@id/field3"
                android:layout_marginTop="@dimen/ht"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/field5"
                android:text="Field5"
                android:textSize="20dp"
                android:layout_below="@id/field4"
                android:layout_marginTop="@dimen/ht"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/field6"
                android:text="Field6"
                android:textSize="20dp"
                android:layout_below="@id/field5"
                android:layout_marginTop="@dimen/ht"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/field7"
                android:text="Field7"
                android:textSize="20dp"
                android:layout_below="@id/field6"
                android:layout_marginTop="@dimen/ht"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/field8"
                android:text="Field8"
                android:textSize="20dp"
                android:layout_below="@id/field7"
                android:layout_marginTop="@dimen/ht"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/metadata"
                android:text="Meta Data"
                android:textSize="20dp"
                android:layout_below="@id/field8"
                android:layout_marginTop="@dimen/ht"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tags"
                android:text="Tags"
                android:textSize="20dp"
                android:layout_below="@id/metadata"
                android:layout_marginTop="@dimen/ht"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/makepublic"
                android:text="Make Public"
                android:textSize="20dp"
                android:layout_below="@id/tags"
                android:layout_marginTop="@dimen/ht"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/url"
                android:text="URL"
                android:textSize="20dp"
                android:layout_below="@id/makepublic"
                android:layout_marginTop="@dimen/ht"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/elevation"
                android:text="Elevation"
                android:textSize="20dp"
                android:layout_below="@id/url"
                android:layout_marginTop="@dimen/ht"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sl"
                android:text="Show Location"
                android:textSize="20dp"
                android:layout_below="@id/elevation"
                android:layout_marginTop="@dimen/ht"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Lat"
                android:text="Latitude\n\n\nLongitude"
                android:textSize="20dp"
                android:layout_below="@id/sl"
                android:layout_marginTop="@dimen/ht"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ss"
                android:text="Show Status"
                android:textSize="20dp"
                android:layout_below="@id/Lat"
                android:layout_marginTop="@dimen/ht"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fake"
                android:text=""
                android:textSize="20dp"
                android:layout_below="@id/ss"
                android:layout_marginTop="@dimen/ht"
                />







        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll1"

            android:layout_marginRight="0dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="20dp"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name1"

                android:textSize="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description1"

                android:textSize="20dp"
                android:layout_below="@id/name1"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/field11"

                android:textSize="20dp"
                android:layout_below="@id/description1"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/field21"

                android:textSize="20dp"
                android:layout_below="@id/field11"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/field31"

                android:textSize="20dp"
                android:layout_below="@id/field21"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/field41"

                android:textSize="20dp"
                android:layout_below="@id/field31"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/field51"

                android:textSize="20dp"
                android:layout_below="@id/field41"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/field61"

                android:textSize="20dp"
                android:layout_below="@id/field51"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/field71"

                android:textSize="20dp"
                android:layout_below="@id/field61"
                android:layout_marginTop="20dp"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/field81"

                android:textSize="20dp"
                android:layout_below="@id/field71"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/metadata1"
                android:textSize="20dp"
                android:layout_below="@id/field81"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tags1"

                android:textSize="20dp"
                android:layout_below="@id/metadata1"
                android:layout_marginTop="20dp"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/makepublic1"

                android:textSize="20dp"
                android:layout_below="@id/tags1"
                android:layout_marginTop="40dp">

            </CheckBox>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/url1"

                android:textSize="20dp"
                android:layout_below="@id/makepublic1"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/elevation1"

                android:textSize="20dp"
                android:layout_below="@id/url1"
                android:layout_marginTop="20dp"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sl1"

                android:textSize="20dp"
                android:layout_below="@id/elevation1"
                android:layout_marginTop="50dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Lat1"
                android:textSize="20dp"
                android:layout_below="@id/sl1"
                android:layout_marginTop="20dp"

                android:visibility="invisible" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Long1"
                android:textSize="20dp"
                android:layout_below="@id/Lat1"
                android:visibility="invisible"
                android:layout_marginTop="20dp"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ss1"
                android:textSize="20dp"
                android:layout_below="@id/Lat1"
                android:layout_marginTop="45dp"
                />

            <Button android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="submit"
                android:layout_below="@id/ss1"
                android:id="@+id/submit"/>




        </LinearLayout>

     </LinearLayout>
    </ScrollView>


</android.support.design.widget.CoordinatorLayout>
